<%- include('includes/head') %>
<%- include('includes/nav') %>
  
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Contatos abaixo</p>
      
      <%- include('includes/messages') %>

      <div class="responsive-table">
        <table class="table my-6 lg-8">
          <thead>
            <tr>
              <th scope="col">Nome</th>
              <th scope="col">Sobrenome</th>
              <th scope="col">Email</th>
              <th scope="col">Telefone</th>
              <th scope="col">Endereço</th>
              <th scope="col">Ação</th>
            </tr>
          </thead>

          <% if(contatos.length > 0) {%>
            <% contatos.forEach( contato => {%>
              <tr>
                <td><%= contato.nome %></td>
                <td><%= contato.sobrenome %></td>
                <td><%= contato.email %></td>
                <td><%= contato.celular %></td>
                <td><%= contato.endereco %></td> 
                <td>
                  <a href="/contato/index/<%= contato._id %>" class="badge badge-primary">Editar</a>
                  <a href="/contato/delete/<%= contato._id %>" class="badge badge-danger">Excluir</a>
                </td>
              </tr>
            <% });%>
          <% }%>
        </table>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
  